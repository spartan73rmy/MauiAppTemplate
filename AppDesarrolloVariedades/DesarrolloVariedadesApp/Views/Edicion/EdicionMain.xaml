<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DesarrolloVariedadesApp.Views.Edicion.EdicionMain"
             Title="Black Venture Farm"
             BackgroundColor="White"
             >
    <ScrollView>
        <StackLayout Margin="10">
            <Label
                Style="{StaticResource SubHeadline}"
                Text="Catalogos"
                HorizontalOptions="StartAndExpand"
                />
            
            <FlexLayout Direction="Row" JustifyContent="SpaceEvenly" AlignItems="Center" Wrap="Wrap" Margin="10">
                
                <!--Accesso Cultivo y Variedad-->
                <StackLayout>
                    <ImageButton
                        Source="cultivos.png"
                        Command="{Binding ChangeCultivos}"
                        />

                    <Label
                        Text="Cultivos"
                        FontAttributes="Bold"
                        />
                </StackLayout>
            </FlexLayout>
        </StackLayout>
</ScrollView>
</ContentPage>